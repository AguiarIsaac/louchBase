{% extends "layout.njk" %}  {#Estenção deve ser de acordo com a que a engine está rodando#}

{% block head %}
    <link rel="stylesheet" href="desafio-2-3.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> 
    <title>Courses - RocketSeat</title>
{% endblock %}

{% block content %}
    <section class="cards">
          
            <div class="card" id="starter">
                <div class="card_image-container">
                    <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Logo">
                </div>
                
                <div class="card_content">
                    <p><strong class="starter">Torne-se Um programador desejado</strong> no mercado com seus cursos gratuitos.</p>
                </div>

                <div class="card_info">
                    <p>5 Módulos</p>
                    <p class="card_price" id="starter">Free</p>
                </div>
            </div>

            <div class="card" id="launchbase">
                <div class="card_image-container">
                    <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Logo">
                </div>
                
                <div class="card_content">
                    <p><strong class="lounch_base">Domine Programação do zero</strong> e tenha acesso ás melhores oportunidades do mercado.</p>
                </div>

                <div class="card_info">
                    <p>16 Módulos</p>
                    <p class="card_price" id="lounch_base">Premium</p>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card_image-container">
                    <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="Logo">
                </div>
                
                <div class="card_content">
                    <p><strong class="go_stack">Treinamento imersivo</strong> nas tecnologias mais modernas de sesenvolvimento Web e mobile.</p>
                </div>

                <div class="card_info">
                    <p>20 Módulos</p>
                    <p class="card_price" id="go_stack">Premium</p>
                </div>
            </div>
    </section>

    <div class="modal-overlay">
            <div class="modal">

                <div class="buttons">
                    <a class="miminize">
                        <i class="material-icons">minimize</i>
                    </a>
                    
                    <a class="maxsize-buttom">
                        <i class="material-icons">maximize</i>
                    </a>
                    
                    <a class="close-modal">
                        <i class="material-icons">close</i>
                    </a>
                </div>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
    </div>

    <script src="desafio-2-3.js"></script>
{% endblock %}